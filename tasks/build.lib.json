{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "es2020",
        "moduleResolution": "node",
        "target": "es2020",
        "declaration": true,
        "noImplicitAny": false,
        "rootDir": "../src",
        "noResolve": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "types": [],
        "outDir": "../lib/"
    },
    "include": [ "../src/**/*.ts" ],
    "exclude": [ "../node_modules/*"]
}