{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "declaration": true,
        "noImplicitAny": true,
        "rootDir": "../src",
        "sourceMap": true,
        "noResolve": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "types": [],
        "outDir": "../lib/cjs/"
    },
    "include": [ "../src/**/*.ts" ],
    "exclude": [ "../node_modules/*"]
}